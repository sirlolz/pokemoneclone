<% if @user.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= pluralize(@user.errors.count, "error") %>
    prohibited this user from being saved:
  </h2>

  <ul>
  <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
</div>
<% end %>

<%= form_for (@user) do |f| %>
    <%= f.label :name, "name" %>
    <%= f.text_field :name %><br> 

    <label for="user_pokemon"> user pokemon: </label>
    <%= collection_select(:user, :pokemon_ids, Pokemon.all, :id, :name, prompt: "select your pokemon") %>
    
    <%= f.submit %>
<% end %>