<h2>choose a pokemon and enter your name to start playing</h2>

<% if @user.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= pluralize(@user.errors.count, "error") %>
    prohibited this user from being saved:
  </h2>

  <ul>
  <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
</div>
<% end %>

<%= form_for (@user) do |f| %>
    <%= f.label :name, "Type your name:" %>
    <%= f.text_field :name, placeholder: 'enter name' %><br> 

    <label for="user_pokemon"> Select your pokemon: </label>
    <%= collection_select(:user, :pokemon_ids, Pokemon.all, :id, :name) %>
    
    <p><%= f.submit "Lets Start Playing"%></p>
<% end %>