<!DOCTYPE html>
<html>
  <head>
    <title>Monster</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if session[:id] %>
      <div class="nav">
        <%= link_to  "logout", logout_path, method: 'post', id: 'logout_link' %>
        <%= link_to "home", user_path(session[:id]), id: 'send_session_user_home_link' %>
      </div>
    <%end%>
      <%= yield %>
  </body>
</html>
